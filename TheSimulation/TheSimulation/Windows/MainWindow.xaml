<Window x:Class="TheSimulation.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TheSimulation"
    mc:Ignorable="d"
    Title="Forest fire simulation configuration"
    Height="650"
    Width="1000"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen">

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<!-- Controls -->
			<RowDefinition Height="Auto"/>
			<!-- Simulate-Button -->
		</Grid.RowDefinitions>

		<!-- Zahnrad Icon oben rechts -->
		<Button x:Name="SettingsButton"
            Width="40" Height="40" Margin="0,5,0,0"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="OpenGraphicsSettingsWindow">
			<Image Source="/Assets/Images/gear-icon.png" Stretch="Uniform"
                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
			<Button.ToolTip>
				<ToolTip Content="Graphicssettings"/>
			</Button.ToolTip>
		</Button>

		<!-- Settingboxes -->
		<StackPanel Grid.Row="0" VerticalAlignment="Top">

            <!-- Terrain -->
			<GroupBox Header="Terrain" Margin="0,0,50,10" BorderBrush="Black">
				<StackPanel>
					<CheckBox Margin="5,5,0,0"
                      x:Name="TerrainGenerationCheckBox"
                      Content="Enable terrain generation"
                      IsChecked="True"
                      AutomationProperties.Name="Enable terrain generation"/>
				</StackPanel>
			</GroupBox>

			<!-- Trees -->
			<GroupBox Header="Trees" Margin="0,0,0,10" BorderBrush="Green">
				<StackPanel>
					<CheckBox Margin="5,5,0,5"
                      x:Name="GrowForestCheckBox"
                      Content="Grow forest"
                      IsChecked="True"
                      AutomationProperties.Name="Grow forest"
                      Unchecked="GrowForestCheckBox_Unchecked"
                      Checked="GrowForestCheckBox_Checked"/>

					<CheckBox Margin="5,5,0,0"
                      x:Name="PrefillCheckBox"
                      Content="Prefill forest"
                      IsChecked="False"
                      AutomationProperties.Name="Prefill forest"
                      Checked="PrefillCheckBox_Changed"
                      Unchecked="PrefillCheckBox_Changed"/>

					<!-- TextBlock für Prefill density Wert -->
					<TextBlock Margin="10,5,0,5"
                   FontSize="14"
                   Text="{Binding ElementName=PrefillDensitySlider,
                                  Path=Value,
                                  StringFormat=Prefill density: {0:F0}%}"/>
					<Slider x:Name="PrefillDensitySlider"
                Minimum="0"
                Maximum="100"
                Value="60"
                TickFrequency="5"
                IsSnapToTickEnabled="True"
                AutomationProperties.Name="Prefill density"
                IsEnabled="False"/>
				</StackPanel>
			</GroupBox>

			<!-- Fire -->
			<GroupBox Header="Fire" Margin="0,0,0,10" BorderBrush="Red">
				<StackPanel>
					<CheckBox Margin="5,5,60,0"
                      x:Name="PauseFireCheckBox"
                      Content="Pause growing during fire"
                      IsChecked="True"
                      AutomationProperties.Name="Pause growing during fire"/>

					<TextBlock
                        Text="{Binding ElementName=FireIntensitySlider,
                                       Path=Value,
                                       StringFormat=Fire spread chance: {0:F0}%}"
                        FontSize="14" Margin="10,5,0,0"/>
					<Slider x:Name="FireIntensitySlider"
                            Maximum="100"
                            Value="85"
                            IsSnapToTickEnabled="True"
                            TickFrequency="5"
                            AutomationProperties.Name="Fire spread chance"/>
				</StackPanel>
			</GroupBox>

			<!-- Environment -->
			<GroupBox Header="Environment" BorderBrush="Blue">
				<StackPanel>
					<!-- Air Humidity -->
					<TextBlock Margin="10,5,0,0"
           FontSize="14"
           Text="{Binding ElementName=AirHumiditySlider,
                          Path=Value,
                          StringFormat=Air humidity: {0:F0}%}"
           AutomationProperties.Name="Air humidity label"/>

					<Slider x:Name="AirHumiditySlider"
        Minimum="0"
        Maximum="100"
        Value="50"
        TickFrequency="5"
        IsSnapToTickEnabled="True"
        AutomationProperties.Name="Air humidity"
        AutomationProperties.HelpText="0% is very dry, 100% is very humid"/>

					<!-- Air Temperature -->
					<TextBlock Margin="10,5,0,0"
                       FontSize="14"
                       Text="{Binding ElementName=AirTemperatureSlider,
                                      Path=Value,
                                      StringFormat=Air temperature: {0:F0} °C}"
                       AutomationProperties.Name="Air temperature label"/>

					<Slider x:Name="AirTemperatureSlider"
                        Minimum="-10"
                        Maximum="50"
                        Value="30"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        AutomationProperties.Name="Air temperature"
                        AutomationProperties.HelpText="Air temperature in degrees Celsius"/>

					<!-- Abstand -->
					<Rectangle Height="10"/>

					<CheckBox Margin="5,5,0,0"
                      x:Name="RandomWindDirectionCheckBox"
                      Content="Random wind direction"
                      IsChecked="False"
                      AutomationProperties.Name="Random wind direction"
                      Checked="RandomWindDirectionCheckBox_Changed"
                      Unchecked="RandomWindDirectionCheckBox_Changed"/>

					<TextBlock Margin="10,5,0,0"
                               Text="Wind direction (from)"
                               AutomationProperties.Name="Wind direction label"/>
					<ComboBox Margin="4,5,4,0"
                              x:Name="WindDirectionBox"
                              SelectedIndex="2"
                              MinWidth="150"
                              AutomationProperties.Name="Wind direction"
                              AutomationProperties.HelpText="Selects the direction of the wind">
						<ComboBoxItem Content="North"/>
						<ComboBoxItem Content="East"/>
						<ComboBoxItem Content="South"/>
						<ComboBoxItem Content="West"/>
					</ComboBox>

					<!-- Abstand -->
					<Rectangle Height="5"/>

					<!-- Random Wind Strength Checkbox -->
					<CheckBox Margin="5,5,0,0"
                      x:Name="RandomWindStrengthCheckBox"
                      Content="Random wind strength"
                      IsChecked="False"
                      AutomationProperties.Name="Random wind strength"/>

					<!-- TextBlock für Wind strength Wert -->
					<TextBlock Margin="10,5,0,0"
           FontSize="14"
           Text="{Binding ElementName=WindStrengthSlider,
                          Path=Value,
                          StringFormat=Wind strength: {0:P0}}"/>
					<Slider x:Name="WindStrengthSlider"
                        Minimum="0"
                        Maximum="1"
                        Value="0.7"
                        TickFrequency="0.05"
		                IsSnapToTickEnabled="True"
                        SmallChange="0.05"
                        LargeChange="0.1"
                        AutomationProperties.Name="Wind strength"
                        AutomationProperties.HelpText="0 is no wind, 1 is strong wind"/>
				</StackPanel>
			</GroupBox>
		</StackPanel>

		<!-- Simulate-Button -->
		<Button Grid.Row="1"
                Content="Simulate"
                Height="40"
                Width="120"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="StartSimulation_Click"/>
	</Grid>

</Window>
