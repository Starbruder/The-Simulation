<Window x:Class="TheSimulation.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TheSimulation"
    mc:Ignorable="d"
    Title="Forest fire simulation"
    Height="600"
    Width="800"
    ResizeMode="NoResize">

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<!-- Controls -->
			<RowDefinition Height="Auto"/>
			<!-- Simulate-Button -->
		</Grid.RowDefinitions>

		<!-- Controls (Fire + Wind) -->
		<StackPanel Grid.Row="0" VerticalAlignment="Top">
			<!-- Fire -->
			<GroupBox Header="Fire" Margin="0,0,0,10">
				<StackPanel>
					<TextBlock
                    Text="{Binding ElementName=FireIntensitySlider,
                                   Path=Value,
                                   StringFormat=Fire spread chance: {0:F0}%}"
                    FontSize="14"/>
					<Slider x:Name="FireIntensitySlider"
                        Maximum="100"
                        Value="75"
                        IsSnapToTickEnabled="True"
                        TickFrequency="5"
                        AutomationProperties.Name="Fire spread chance"/>
				</StackPanel>
			</GroupBox>

			<!-- Wind -->
			<GroupBox Header="Wind">
				<StackPanel>
					<TextBlock Text="Wind direction"
                           AutomationProperties.Name="Wind direction label"/>
					<ComboBox x:Name="WindDirectionBox"
                          SelectedIndex="2"
                          MinWidth="150"
                          AutomationProperties.Name="Wind direction"
                          AutomationProperties.HelpText="Selects the direction of the wind">
						<ComboBoxItem Content="North"/>
						<ComboBoxItem Content="East"/>
						<ComboBoxItem Content="South"/>
						<ComboBoxItem Content="West"/>
					</ComboBox>

					<TextBlock Text="Wind strength"
                           Margin="0,10,0,0"
                           AutomationProperties.Name="Wind strength label"/>
					<Slider x:Name="WindStrengthSlider"
                        Minimum="0"
                        Maximum="1"
                        Value="0.8"
                        SmallChange="0.05"
                        LargeChange="0.1"
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="True"
                        AutomationProperties.Name="Wind strength"
                        AutomationProperties.HelpText="0 is no wind, 1 is strong wind"/>
				</StackPanel>
			</GroupBox>
		</StackPanel>

		<!-- Simulate-Button -->
		<Button Grid.Row="1"
            Content="Simulate"
            Height="40"
            Width="120"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Click="StartSimulation_Click"/>
	</Grid>

</Window>
