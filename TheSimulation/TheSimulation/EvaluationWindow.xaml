<Window x:Class="TheSimulation.EvaluationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheSimulation"
        mc:Ignorable="d"
        Title="EvaluationWindow" Height="650" Width="1000">
	<Grid x:Name="EvaluationLayer"
      Background="White">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
			<TextBlock Text="Simulation Auswertung" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
			<TextBlock x:Name="EvalTotalGrown" FontSize="16" Margin="0,5,0,0" Text="Total Grown: 0"/>
			<TextBlock x:Name="EvalTotalBurned" FontSize="16" Margin="0,5,0,0" Text="Total Burned: 0"/>
			<TextBlock x:Name="EvalTreeDensity" FontSize="16" Margin="0,5,0,0" Text="Tree Density: 0 / 0 (0%)"/>
			<TextBlock x:Name="EvalRuntime" FontSize="16" Margin="0,5,0,0" Text="Runtime: 00:00:00"/>
		</StackPanel>
	</Grid>
</Window>
